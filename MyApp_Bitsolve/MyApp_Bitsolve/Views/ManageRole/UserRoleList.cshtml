@model IEnumerable<BusinessEntities.UserRoleMasterVM>


<table id="dataTable" class="table table-striped table-condensed table-bordered" style="width: 100%">
    <thead class="card-header alert-info">
        <tr>
            <th>Sr.No.</th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.UserRoleId)
            </th>
            <th style="width: 500px">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th style="width: 500px">
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th style="width: 100px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int count = 1;
            foreach (var item in Model)
            {
            <tr>
                <td>@count</td>
                <td class="hidden">
                    @Html.DisplayFor(modelItem => item.UserRoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <a onclick="OpenPopUp('@Url.Action("AddOrEditUserRole", "ManageRole", new { id = @item.UserRoleId })')" style="color:white"  class=" btn btn-success"><i class="fa fa-edit"></i></a>
                    <a onclick="Delete(@item.UserRoleId)" class="btn btn-warning" style="color:white"><i class="fa fa-trash"></i></a>

                </td>
            </tr>
                count++;
            }
        }
    </tbody>
</table>
   </div>