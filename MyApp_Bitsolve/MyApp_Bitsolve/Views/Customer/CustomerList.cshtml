@model IEnumerable<BusinessEntities.CustomerVM>
<div class="table table-responsive">
<table id="CustomerTable" class="table table-condensed table-striped table-bordered" style="width: 100%">
    <thead class="card-header alert-info">
        <tr>
            <th>Sr. No.</th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.CustomerCode)
            </th>

            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.PinCode)
            </th>

            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.MobileNo1)
            </th>


            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.VAT)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.CST)
            </th>
            <th style="width: 100px">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th style="width: 100px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int count = 1;
            foreach (var item in Model)
            {
            <tr>
                <td>@count</td>
                <td class="hidden">
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerCode)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinCode)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo1)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CST)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a onclick="OpenPopUp('@Url.Action("AddOrEditCustomer", "Customer", new { id = item.CustomerId })')" style="color:white"  class=" btn btn-success"><i class="fa fa-edit"></i></a>
                    <a onclick="Delete(@item.CustomerId)" class="btn btn-warning" style="color:white"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
                count++;
            }
        }
    </tbody>
</table>
</div>

