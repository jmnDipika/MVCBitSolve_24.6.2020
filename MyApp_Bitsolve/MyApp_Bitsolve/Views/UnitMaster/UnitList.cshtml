@model IEnumerable<BusinessEntities.UnitMasterVM>

<div class="table table-responsive">
<table id="dataTable" class="table table-condensed table-striped table-bordered" style="width: 100%">
    <thead class="card-header alert-info">
        <tr>
            <th>Sr.No.</th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.UnitId)
            </th>
            <th style="width: 600px">
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th style="width: 200px">
                @Html.DisplayNameFor(model => model.abbreviation)
            </th>
            <th style="width: 200px">Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int count = 1;
            foreach (var item in Model)
            {
            <tr>
                <td>@count</td>
                <td class="hidden">
                    @Html.DisplayFor(modelItem => item.UnitId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.abbreviation)
                </td>

                <td>
                    <a onclick="OpenPopUp('@Url.Action("AddOrEditUnit", "UnitMaster", new { id = item.UnitId })')" style="color:white"  class=" btn btn-success"><i class="fa fa-edit"></i></a>
                    <a onclick="Delete(@item.UnitId)" style="color:white"  class="btn btn-warning"><i class="fa fa-trash"></i></a>

                </td>
            </tr>
                count++;
            }
        }
    </tbody>
</table>
</div>